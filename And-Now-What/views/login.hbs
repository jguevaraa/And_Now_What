<h1>Login page</h1>

<form method="POST" action="/auth/login">
  <div class="mb-3 needs-validation">
    <label for="exampleInputEmail1" class="form-label">Username</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" required>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password" required minlength="3" maxlength="10">
  </div>

  <button type="submit" class="btn btn-primary">Lets Cook</button>
</form>

{{#if errorMessage}}
  <div>
   <p class="error-message"> {{ errorMessage }}</p>
  </div>
{{/if}}